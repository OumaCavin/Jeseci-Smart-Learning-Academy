# =============================================================================
# Database Configuration for Jeseci Smart Learning Companion
# =============================================================================
# This file contains all database connection settings for PostgreSQL and Neo4j.
# Copy this file to .env and update the values for your environment.
# =============================================================================

# =============================================================================
# PostgreSQL Configuration (Primary Database)
# =============================================================================
# Connection string format: postgresql://username:password@host:port/database_name
# For local development with default credentials:
# DATABASE_URL=postgresql://jeseci_user:secure_password_123@localhost:5432/jeseci_learning_academy

# Alternative connection parameters
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jeseci_learning_academy
POSTGRES_USER=jeseci_user
POSTGRES_PASSWORD=secure_password_123

# Connection pool settings
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=1800

# =============================================================================
# Neo4j Configuration (Graph Database)
# =============================================================================
# Neo4j connection for knowledge graph and learning path recommendations

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_secure_password_2024
NEO4J_DATABASE=jeseci_academy

# Neo4j connection settings
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=100
NEO4J_CONNECTION_TIMEOUT=30

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# CORS Configuration
# =============================================================================
# Cross-Origin Resource Sharing (CORS) settings for frontend integration
# Comma-separated list of allowed origins (use * for development only)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Enable/disable CORS credentials
CORS_ALLOW_CREDENTIALS=true
# CORS methods allowed
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS headers allowed
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# Security Settings
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=jeseci_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI Configuration
# =============================================================================
# OpenAI API Key for AI-powered content generation
OPENAI_API_KEY=your_openai_api_key_here
