#!/bin/bash
# Jeseci Smart Learning Academy - Server Startup Script
# This script sets up the environment and starts the Jac API server

# Set PYTHONPATH to enable absolute imports
export PYTHONPATH=.

# Remove cached session files to force fresh compilation with new endpoints
rm -f backend/app.session*
rm -f backend/app.jir

# Run the FastAPI Python server (which has all the authentication endpoints)
python backend/main.py
