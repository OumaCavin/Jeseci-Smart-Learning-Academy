# Environment Variables Template
# Copy this file to .env and fill in your values

# ==============================================================================
# OPENAI API CONFIGURATION
# ==============================================================================
# Required for AI content generation and chat features
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
# Backend server configuration
JAC_PORT=8000
JAC_HOST=localhost

# Frontend development server
VITE_PORT=5173
VITE_HOST=localhost

# API endpoints
VITE_API_BASE_URL=http://localhost:8000

# ==============================================================================
# ENVIRONMENT SETTINGS
# ==============================================================================
NODE_ENV=development
JAC_ENV=development

# Enable/disable debug mode
DEBUG=true
VITE_DEBUG=true

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# JWT configuration (generate secure random strings)
JWT_SECRET_KEY=your_jwt_secret_here_minimum_32_characters
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=5  # Session timeout: 5 minutes

# Session configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# ==============================================================================
# AI FEATURES CONFIGURATION
# ==============================================================================
# OpenAI model settings
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Content generation settings
AI_CONTENT_ENABLED=true
AI_CHAT_ENABLED=true

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Enable/disable various development features
ENABLE_MOCK_DATA=true
LOG_LEVEL=info

# Database settings (if using external databases)
# Currently using JAC native graph, these are for future expansion
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=jeseci_learning
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password